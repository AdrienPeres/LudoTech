<div class="container d-flex flex-column">
  <h2>Modifier vos informations</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Ne pas remplir sauf pour une modification",
                  required: false,
                  input_html: { autocomplete: "Nouveau mot de passe" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "Nouveau mot de passe" } %>
      <%= f.input :current_password,
                  hint: "Rentrez votre mot de passe actuel pour confirmation",
                  required: true,
                  input_html: { autocomplete: "Mot de passe actuel" } %>
    </div>

    <div class="submit-ludo-button">
      <%= f.button :submit, "Modifier", class: "ludo" %>
    </div>

  <% end %>
  <div class="mt-2 mb-3">
    <%= link_to "Retour", users_dashboard_path, class: "ludo-button ludo" %>
  </div>
  <div class="">
    <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "ludo-danger" %>
  </div>

</div>
